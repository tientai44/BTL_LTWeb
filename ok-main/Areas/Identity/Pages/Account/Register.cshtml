@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="auth-fluid-form-box" style="background: rgba(0,0,0,0.5);">
    <div class="align-items-center d-flex h-100">
        <div class="card-body">
            <h2 class="mt-0" style="color:white; text-align:center">Sign Up</h2>
            <h5 class=" mb-4" style="color:white; text-align:center">Create your account to discover new world</h5>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" style="color:white;"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" style="color:white"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" style="color:white"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group mb-0 text-center">
                    <button class="btn btn-primary btn-block" type="submit" style="margin-top:40px"><i class="mdi mdi-login"></i> Sign up </button>
                </div>
            </form>

              <footer class="footer footer-alt">
                <p  style="color:white">Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"><b>Sign In</b></a></p>
            </footer>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
