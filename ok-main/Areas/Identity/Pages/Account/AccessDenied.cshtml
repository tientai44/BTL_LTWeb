@page
@model AccessDeniedModel
@{
    Layout = "~/Views/Shared/_ErrorLayout.cshtml";
}
<div class="account-pages mt-5 mb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card">
                    <!-- Logo -->
                    <div class="card-header pt-4 pb-4 text-center bg-primary">
                        <a asp-controller="Customer" asp-action="Index">
                            <span><img src="~/images/onepiece.png" alt="" height="80"></span>
                        </a>
                    </div>

                    <div class="card-body p-4">
                        <div class="text-center">
                            <h1 class="text-error">4<i class="mdi mdi-emoticon-sad"></i>4</h1>
                            <h4 class="text-uppercase text-danger mt-3">Access Denied</h4>
                            <p class="text-muted mt-3">
                                Your account don't have permission to access this page
                            </p>

                            <a class="btn btn-info mt-3" asp-controller="Customer" asp-action="Index"><i class="mdi mdi-reply"></i> Return Home</a>
                        </div>
                    </div> <!-- end card-body-->
                </div>
                <!-- end card -->
            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>
