
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Page Title";
}
@using X.PagedList.Mvc.Core

@model X.PagedList.IPagedList<Product>

    <div class="container-fluid mm-active">

        <div class="wrapper mm-show">
            <div class="content-page">
                <div class="content">
                    <div class="row">
                        @foreach(var item in Model)
                        {
                            <div class="col-md-6 col-xl-3" >
                                <!-- project card -->
                                <div class="card d-block text-dark" style="width: 300px; height: 300px; margin: 50px 0px 0px 0px; box-shadow: 0 10px 15px 0 rgba(0, 0, 0, 0.25),
  0 5px 15px 0 rgba(0, 0, 0, 0.12)">
                                    <!-- project-thumbnail -->
                                    <img class="card-img-top" src="@item.Image1"
                                         alt="project image cap" style="height: 100%; width:100%">

                                    <div class="card-body position-relative" style="padding-left: unset; padding-right: unset; margin-bottom: 9px ">
                                        <!-- project title-->
                                        <h4 class="mt-0">
                                        <a asp-controller="Customer" asp-action="Details" asp-route-id="@item.Id">
                                               <class="text-title">@item.Name

                                               </a>
                                        </h4>

                                        <!-- project detail-->
                                        <p class="mb-3">
                                            <span class="pr-2 text-nowrap">
                                            <i class=" dripicons-shopping-bag"></i>
                                                
                                                    @for(int i=0;i<ViewBag.Categories.Count;i++)
                                                    {
                                                        if(ViewBag.Categories[i].Id==item.CategoryId)
                                                        {
                                                        <b>
                                                            Category: @ViewBag.Categories[i].Name
                                                        </b>
                                                        }
                                                    }
                                                
                                            </span>
                                            
                                            <span class="text-nowrap">
                                            <i class="uil uil-usd-circle"></i>
                                                <b>Price: $@item.Price</b>
                                            </span>
                                            <br>
                                            <span class="text-nowrap">
                                                <i class="uil-atom"></i>
                                            <b>Quantity: @item.Quantity</b>
                                                
                                            </span>
                                        </p>

                                        <!-- project progress-->
                                    @{
                                        Random rnd = new Random();
                                        // This will return either 1 or 2 randomly.
                                        int question = rnd.Next(1, 100);
                                    }
                                        <p class="mb-2 font-weight-bold">Most people like <span
                                                class="float-right">@question%</span>
                                        </p>
                                        <div class="progress progress-sm">
                                            <div class="progress-bar" role="progressbar" aria-valuenow="45"
                                                 aria-valuemin="0" aria-valuemax="100" style="width: @question%;">
                                            </div><!-- /.progress-bar -->
                                        </div><!-- /.progress -->
                                    </div> <!-- end card-body-->
                                </div> <!-- end card-->
                            </div>
                        }
                        <!-- end col -->
                    </div>
                </div>
            </div>
        </div>
    </div>

<br />
<style>
        .pagination-container {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 20px;
      font-size: 18px;
    }

    .pagination {
      display: flex;
      justify-content: center;
      align-items: center;
      list-style: none;
      margin: 0;
      padding: 0;
    }

    .pagination li {
      margin: 0 5px;
    }

    .pagination li.active span {
      background-color: #007bff;
      color: #fff;
      padding: 10px;
      border-radius: 5px;
    }

    .pagination li a {
      color: #007bff;
      text-decoration: none;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #007bff;
      transition: all 0.3s ease;
    }

    .pagination li a:hover {
      background-color: #007bff;
      color: #fff;
    }
</style>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

@Html.PagedListPager(Model,page=>Url.Action("Index",new{page=page}))
