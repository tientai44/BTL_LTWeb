@{
    ViewData["Title"] = "Reset password";
}
@using Microsoft.AspNetCore.Identity;
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<IdentityUser>
<h1>Reset password</h1>
@if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    ID
                </th>

                <th>
                    Email
                </th>
                <th>
                    UserName
                </th>
                <th>
                    Password
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.UserName
                    </td>

                    <td>
                        *********
                    </td>
                    @for (int i = 0; i < ViewBag.Roles.Count; i++)
                    {
                        if (ViewBag.Roles[i].Id == "O")
                        {
                            <td>
                                <a asp-controller="Admin" asp-action="Edit" class="action-icon" asp-route-id="@item.Id"> <i class="mdi mdi-square-edit-outline "></i></a>
                            </td>

                        }
                    }

                </tr>
            }

        </tbody>
    </table>
}
<br />
<style>
    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
        font-size: 18px;
    }

    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        list-style: none;
        margin: 0;
        padding: 0;
    }

        .pagination li {
            margin: 0 5px;
        }

            .pagination li.active span {
                background-color: #007bff;
                color: #fff;
                padding: 10px;
                border-radius: 5px;
            }

            .pagination li a {
                color: #007bff;
                text-decoration: none;
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #007bff;
                transition: all 0.3s ease;
            }

                .pagination li a:hover {
                    background-color: #007bff;
                    color: #fff;
                }
</style>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

@Html.PagedListPager(Model,page=>Url.Action("Reset",new{page=page}))
