@model NotUseAuto.Models.Product

@if (User.Identity.IsAuthenticated && User.IsInRole("Owner"))
{
    <div class="container-fluid">
        <!-- end page title -->
        <h1 style="color: red;">Are you sure to delete this products?</h1>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-5">

                                <!-- Product image -->
                                <a href="javascript: void(0);" class="text-center d-block mb-4">
                                    <img src="@Model.Image1" class="img-fluid" style="max-width: 280px;" alt="Product-img">
                                </a>

                                <div class="d-lg-flex d-none justify-content-center">
                                    <a href="javascript: void(0);">
                                        <img src="@Model.Image1" class="img-fluid img-thumbnail p-2" style="max-width: 75px;" alt="Product-img">
                                    </a>
                                    <a href="javascript: void(0);" class="ml-2">
                                        <img src="@Model.Image2" class="img-fluid img-thumbnail p-2" style="max-width: 75px;" alt="Product-img">
                                    </a>
                                    <a href="javascript: void(0);" class="ml-2">
                                        <img src="@Model.Image3" class="img-fluid img-thumbnail p-2" style="max-width: 75px;" alt="Product-img">
                                    </a>
                                </div>
                            </div> <!-- end col -->
                            <div class="col-lg-7">
                                <form class="pl-lg-4" asp-controller="Products" asp-action="Delete" method="post">
                                    <input type="hidden" asp-for="Id" class="form-control" />
                                    <!-- Product title -->
                                    <h3 class="mt-0">@Model.Name</h3>
                                    <p class="font-16">
                                        <span class="text-warning mdi mdi-star"></span>
                                        <span class="text-warning mdi mdi-star"></span>
                                        <span class="text-warning mdi mdi-star"></span>
                                        <span class="text-warning mdi mdi-star"></span>
                                        <span class="text-warning mdi mdi-star"></span>
                                    </p>
                                    <!-- Product stock -->
                                    @if (Model.Quantity >= 1)
                                    {
                                        <span class="badge badge-success mt-3">Instock</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger mt-3">Out of Stock</span>
                                    }

                                    <!-- Product description -->
                                    <div class="mt-4">
                                        <h6 class="font-14">Retail Price:</h6>
                                        <h3> $@Model.Price</h3>
                                    </div>

                                    <!-- Quantity -->
                                    <div class="mt-4">
                                        <h6 class="font-14">Quantity: @Model.Quantity</h6>
                                    </div>

                                    <!-- Product description -->
                                    <div class="mt-4">
                                        <h6 class="font-14">Description:</h6>
                                        <p>@Model.Description</p>
                                    </div>

                                    <!-- Product information -->
                                    <div class="mt-4">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <h6 class="font-14">Available Stock:</h6>
                                                <p class="text-sm lh-150">@Model.Quantity</p>
                                            </div>
                                            <div class="col-md-4">
                                                <h6 class="font-14">Number of Orders:</h6>
                                                @{
                                                    Random rnd = new Random();
                                                    int order = rnd.Next(1, 5000);
                                                }
                                                <p class="text-sm lh-150">@order</p>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="submit" value="Delete" class="btn btn-danger" style="border-radius:25px" />
                                    <a asp-controller="Products" asp-action="Index" class="btn btn-dark" style="border-radius:25px; margin-left:10px">Cancel</a>
                                </form>
                            </div> <!-- end col -->
                        </div> <!-- end row-->
                    </div> <!-- end card-body-->
                </div> <!-- end card-->
            </div> <!-- end col-->
        </div>
        <!-- end row-->
    </div>

}





